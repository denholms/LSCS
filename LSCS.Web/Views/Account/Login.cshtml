@model LSCS.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="page-header">
    <h3><strong><big>Login</big></strong></h3>
</div>
<div class="col-md-12">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Username" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Log In" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Register New User", "Register")
</div>